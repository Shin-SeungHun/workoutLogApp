                            android:layout_height="match_parent"
                            android:layout_weight="0.7"

                            android:orientation="horizontal"></LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="9"

                            android:orientation="horizontal">


                            <LinearLayout
